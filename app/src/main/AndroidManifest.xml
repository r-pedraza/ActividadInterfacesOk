<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.raulpedraza.actividadinterfaces" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Frame"
            android:label="@string/title_activity_frame" >
        </activity>
        <activity
            android:name=".Relative"
            android:label="@string/title_activity_relative" >
        </activity>
        <activity
            android:name=".LinearVertical"
            android:label="@string/title_activity_linear_vertical" >
        </activity>
        <activity
            android:name=".Scrollview"
            android:label="@string/title_activity_scrollview" >
        </activity>
        <activity
            android:name=".Table"
            android:label="@string/title_activity_table" >
        </activity>
        <activity
            android:name=".Grid"
            android:label="@string/title_activity_grid" >
        </activity>
    </application>

</manifest>
